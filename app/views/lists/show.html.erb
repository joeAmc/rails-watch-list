<div class="banner d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1><%= @list.name %></h1>
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-danger'%>
    <%= link_to 'Back', lists_path, class: 'btn btn-outline-danger' %>
  </div>
</div>

<div class="container-bookmark">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-bookmark">
      <img src="https://source.unsplash.com/random"/>
      <div class="card-info align-items-center justify-content-center">
        <h4><%= bookmark.movie.title %></h4>
        <p><%= bookmark.movie.overview %></p>
        <p class="bm-p">"<%= bookmark.comment %>"</p>
        <%= link_to "Delete",
              bookmark_path(bookmark),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger btn-sm' %>
      </div>
    </div>
  <% end %>
</div>
